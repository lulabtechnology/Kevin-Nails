{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowJs": false,
    "strict": true,
    "noEmit": true,
    "jsx": "preserve",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "types": ["vitest/globals", "node"]
  },
  "include": [
    "app/**/*",
    "components/**/*",
    "lib/**/*",
    "tests/**/*",
    "next-env.d.ts"
  ],
  "exclude": ["node_modules"]
}
